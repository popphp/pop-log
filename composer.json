    "keywords": [
        "log",
        "syslog",
        "logging",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "https://github.com/popphp/pop-log",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
        "php": ">=8.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0.0",
        "popphp/pop-db": "^6.7.0",
        "popphp/pop-http": "^5.3.8",
        "popphp/pop-mail": "^4.0.7"
